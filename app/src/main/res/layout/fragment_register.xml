<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/screens_bg_color"
    android:orientation="vertical"
    android:scrollbars="none"

    tools:context="com.rsp.hbm.Fragments.LoginFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="@dimen/_17sdp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/nunito_sans_light"
            android:text="Welcome back! Already have an account?"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/loginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:fontFamily="@font/nunito_sans_light"
            android:text="Log In"
            android:textColor="@color/primary"
            android:textSize="@dimen/_12sdp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_44sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:textColorHint="#999999"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusBottomEnd="@dimen/_26sdp"
            app:boxCornerRadiusBottomStart="@dimen/_26sdp"
            app:boxCornerRadiusTopEnd="@dimen/_26sdp"
            app:boxCornerRadiusTopStart="@dimen/_26sdp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_1sdp"
                android:elevation="@dimen/_1sdp"
                android:fontFamily="@font/nunito_sans_light"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:paddingHorizontal="@dimen/_6sdp"
                android:paddingVertical="@dimen/_3sdp"
                android:textSize="@dimen/_12sdp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_44sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:textColorHint="#999999"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusBottomEnd="@dimen/_26sdp"
            app:boxCornerRadiusBottomStart="@dimen/_26sdp"
            app:boxCornerRadiusTopEnd="@dimen/_26sdp"
            app:boxCornerRadiusTopStart="@dimen/_26sdp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/lName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_1sdp"
                android:elevation="@dimen/_1sdp"
                android:fontFamily="@font/nunito_sans_light"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:paddingHorizontal="@dimen/_6sdp"
                android:paddingVertical="@dimen/_3sdp"
                android:textSize="@dimen/_12sdp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_44sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:textColorHint="#999999"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusBottomEnd="@dimen/_26sdp"
            app:boxCornerRadiusBottomStart="@dimen/_26sdp"
            app:boxCornerRadiusTopEnd="@dimen/_26sdp"
            app:boxCornerRadiusTopStart="@dimen/_26sdp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_1sdp"
                android:elevation="@dimen/_1sdp"
                android:fontFamily="@font/nunito_sans_light"
                android:hint="Phone"
                android:inputType="number"
                android:paddingHorizontal="@dimen/_6sdp"
                android:paddingVertical="@dimen/_3sdp"
                android:textSize="@dimen/_12sdp" />
        </com.google.android.material.textfield.TextInputLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/requestOTP"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:background="@drawable/request_otp_selector"
                android:elevation="@dimen/_2sdp"
                android:paddingHorizontal="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:text="SEND"
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/send_ic" />

            </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_44sdp"
                android:layout_centerVertical="true"

                android:layout_toEndOf="@id/requestOTP"
                android:textColorHint="#999999"
                app:boxBackgroundColor="@color/white"
                app:boxCornerRadiusBottomEnd="@dimen/_26sdp"
                app:boxCornerRadiusBottomStart="@dimen/_26sdp"
                app:boxCornerRadiusTopEnd="@dimen/_26sdp"
                app:boxCornerRadiusTopStart="@dimen/_26sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/otp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_1sdp"
                    android:elevation="@dimen/_1sdp"
                    android:fontFamily="@font/nunito_sans_light"
                    android:gravity="center"
                    android:hint="One Time Password"
                    android:inputType="number"
                    android:paddingHorizontal="@dimen/_6sdp"
                    android:paddingVertical="@dimen/_3sdp"
                    android:textSize="@dimen/_12sdp" />
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_margin="@dimen/_2sdp"
            android:elevation="@dimen/_2sdp"
            android:text="Sign Up"
            android:textAllCaps="true" />
    </LinearLayout>


</ScrollView>